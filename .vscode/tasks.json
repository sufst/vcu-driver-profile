{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build: debug",
			"command": "cd ${workspaceFolder}/build; cmake .. -DCMAKE_BUILD_TYPE=Debug; make -j$(nproc)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["absolute"]
			},
		},
        {
			"type": "shell",
			"label": "build: release",
			"command": "cd ${workspaceFolder}/build; cmake .. -DCMAKE_BUILD_TYPE=Release; make -j$(nproc)",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["absolute"]
			},
		},
		{
			"type": "shell",
			"label": "trunk: format current file",
			"command": "trunk",
			"args": [
				"fmt",
				"${relativeFile}",
			]
		}
	]
}